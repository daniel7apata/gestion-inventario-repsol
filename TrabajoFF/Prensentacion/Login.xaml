<Window x:Class="Prensentacion.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prensentacion"
        mc:Ignorable="d"
        Title="Login" Height="394" Width="400">
    <Grid Margin="0,0,22,12">
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Center" Margin="0,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Height="23"/>
        <TextBox x:Name="txtContrasenia" HorizontalAlignment="Center" Margin="0,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Height="24"/>
        <Label Content="Usuario" HorizontalAlignment="Left" Margin="25,50,0,0" VerticalAlignment="Top"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="25,142,0,0" VerticalAlignment="Top"/>
        <Button Content="Iniciar sesión" HorizontalAlignment="Center" Margin="0,239,0,0" VerticalAlignment="Top" Height="37" Width="230" Click="Button_Click"/>
        <Button Content="Registrar usuario" HorizontalAlignment="Center" Margin="0,304,0,0" VerticalAlignment="Top" Height="23" Width="146" Click="Button_Click_1"/>

    </Grid>
</Window>
